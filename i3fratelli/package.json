{
  "name": "i3fratelli-website",
  "version": "3.1.1",
  "description": "Sito web I 3 Fratelli - L'unico vero panificio H24 di Milano",
  "private": true,
  "author": "I 3 Fratelli",
  "license": "UNLICENSED",
  "homepage": "https://www.i3fratelli.it",
  "keywords": [
    "panificio",
    "milano",
    "24h",
    "pane artigianale",
    "granite",
    "b2b ristoranti"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "react-scripts start",
    "build": "react-scripts build && npm run postbuild",
    "postbuild": "npm run generate-sitemap --if-present && npm run optimize-images --if-present && npm run extract-critical-css --if-present",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer \"build/static/js/*.js\"",
    "optimize-images": "node scripts/optimize-images.js",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "extract-critical-css": "node scripts/extract-critical-css.js",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "check-seo": "node monitoring/seo-audit.js",
    "security-audit": "npm audit && node monitoring/security-audit.js",
    "deploy": "npm run build && bash scripts/deploy.sh",
    "update-gmb": "node scripts/update-gmb.js"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-intersection-observer": "^9.5.3",
    "react-lazy-load-image-component": "^1.6.0",
    "react-router-dom": "^6.21.0",
    "web-vitals": "^3.5.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "critical": "^6.0.0",
    "eslint": "^8.56.0",
    "eslint-config-react-app": "^7.0.1",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "react-scripts": "5.0.1",
    "sass": "^1.69.7",
    "sharp": "^0.33.2",
    "sitemap": "^7.1.1",
    "source-map-explorer": "^2.5.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
